<!-- This is the root recent element ;). -->
<!ELEMENT we:xml-feed (recent-post*)>
	<!ATTLIST we:xml-feed xmlns CDATA "http://wedge.org/files/xml/recent.dtd">
	<!ATTLIST we:xml-feed xmlns:we CDATA "http://wedge.org/">

	<!-- A file to modify... -->
	<!ELEMENT recent (time, id, subject, body)>
		<!-- The time of the post. -->
		<!ELEMENT recent time CDATA #REQUIRED>

		<!-- The id_msg of the post. -->
		<!ELEMENT recent id CDATA #REQUIRED>

		<!-- The subject of the post. -->
		<!ELEMENT recent subject CDATA #REQUIRED>

		<!-- The body of the post. -->
		<!ELEMENT recent body CDATA #REQUIRED>

<!-- These are really common... -->
<!ENTITY nbsp "&#160;">
<!ENTITY reg "&#174;">
<!ENTITY copy "&#169;">
